<%- include("partials/header.ejs") %>

<div class="container my-5 flex-grow-1">
  <div class="text-center mb-5">
    <h2 class="fw-bold" style="color: #1b3022;">Find a Book to Add</h2>
    <p class="text-muted">Enter ISBN to fetch details automatically</p>
    
    <div class="row justify-content-center mt-4">
      <div class="col-md-6">
        <form action="/searchByIsbn" method="POST" class="d-flex gap-2">
          <input type="text" name="isbn" class="form-control custom-input" 
                 placeholder="ISBN (Ã¶rn: 9780141036144)" required>
          <button type="submit" class="btn-forest">Search</button>
        </form>
        <% if (locals.error) { %>
          <div class="alert alert-danger mt-3 small"><%= error %></div>
        <% } %>
      </div>
    </div>
  </div>

  <% if (locals.book) { %>
    <div class="row justify-content-center animate__animated animate__fadeIn">
      <div class="col-lg-8">
        <div class="card book-card-wide border-0 shadow-lg overflow-hidden" style="width: 100% !important; height: auto !important;">
          <div class="row g-0">
            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-3">
              <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg" 
                   class="img-fluid rounded shadow-sm" alt="cover">
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <form action="/addBook" method="POST">
                  <input type="hidden" name="title" value="<%= book.title %>">
                  <input type="hidden" name="author" value="<%= book.author %>">
                  <input type="hidden" name="isbn" value="<%= book.isbn %>">
                  <input type="hidden" name="description" value="<%= book.description %>">

                  <h3 class="fw-bold mb-1"><%= book.title %></h3>
                  <p class="text-muted mb-3">by <%= book.author %></p>
                  
                  <hr>
                  <div class="row">
                  <div class="mb-3">
                    <label class="form-label small fw-bold uppercase">My Rating</label>
                    <select name="rating" class="form-select custom-input" required>
                      <option value="5">5 Stars - Amazing</option>
                      <option value="4">4 Stars - Very Good</option>
                      <option value="3">3 Stars - Good</option>
                      <option value="2">2 Stars - Okay</option>
                      <option value="1">1 Star - Poor</option>
                    </select>
                  </div>
                  <div class="col-md-6 mb-3">
                      <label class="form-label small fw-bold uppercase">Date Read</label>
                      <input type="date" name="date_read" class="form-control custom-input" 
                             value="<%= new Date().toISOString().split('T')[0] %>" required>
                    </div>
                    </div>

                  <div class="mb-4">
                    <label class="form-label small fw-bold uppercase">Personal Notes</label>
                    <textarea name="notes" class="form-control custom-input" rows="3" placeholder="I loved the ending..." required></textarea>
                  </div>

                  <div class="d-grid">
                    <button type="submit" class="btn-forest py-2">
                      <i class="bi bi-plus-circle"></i> Save to My Library
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<%- include("partials/footer.ejs") %>