<%- include("partials/header.ejs") %>
<!-- Blog Post Details -->
<div class="container my-3 flex-grow-1">
  <div class="row">
    <div class="col-12 post-title mb-3">
        <h1><%= post.title %></h1>
    </div>
   <div class="clearfix col-12">
        <img src="<%= post.imageUrl %>" class="col-md-6 float-md-start mb-3 ms-md-3 me-4 post-img" alt="post details"/>
        <p class="post-content ms-4"><%= post.postContent %>  </p>
    </div>
    <div class="col-12 post-author">
        <small class="text-body-secondary">Author : <%= post.author %></small>
        </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>
